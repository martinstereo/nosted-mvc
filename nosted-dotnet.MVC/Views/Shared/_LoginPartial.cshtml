@{
}
@using Microsoft.AspNetCore.Identity
@using nosted_dotnet.MVC.Data

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item ml-auto">
            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="LogOff">Logg ut</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-controller="Account" asp-action="Register">Registrer</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-controller="Account" asp-action="Login">Logg&nbsp;inn</a>
        </li>
    }
</ul>