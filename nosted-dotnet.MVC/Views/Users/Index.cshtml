@model List<nosted_dotnet.MVC.Models.Users.UserViewModel>
@using nosted_dotnet.MVC.Models.Users
@{
    ViewData["Title"] = "Bruker";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="~/js/site.js"></script>
    <script>
        function confirmDelete() {
            return confirm("Er du sikker på at du vil slette denne brukeren?");
        }
 
            document.getElementById("submitFormBtn").addEventListener("click", function (event) {
                event.preventDefault(); // For å hindre standard lenkeoppførsel
                document.querySelector("form").submit(); // Sender skjemaet
            });

    </script>
</head>



    <h1>Brukere</h1>
    <a href="@Url.Action("Add", "Users")" class="btn btn-warning">Legg til bruker</a>
    <!-- Table for Bruker -->
    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>Bruker-ID:</th>
                <th>Navn:</th>
                <th>E-post:</th>
                <th>Rolle:</th>
                <th>Action:</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Navn</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.IsAdmin)
                        {
                            <span>Administrator</span>
                        }
                        else
                        {
                            <span>Ansatt</span>
                        }
                    </td>
                    <td>

          
                        <a href="@Url.Action("Edit", "Users", new { email = user.Email })" class="btn btn-secondary">Rediger</a>
                        @using (Html.BeginForm("Delete", "Users", new { email = user.Email }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <input type="submit" value="Slett" class="btn btn-danger" />
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>

</html>