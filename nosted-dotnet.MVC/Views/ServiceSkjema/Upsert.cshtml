@model nosted_dotnet.MVC.Models.ServiceSkjema.ServiceSkjemaViewModel
@*@model nosted_dotnet.MVC.Models.Ordre.OrdreEditViewModel*@

@{
    ViewData["Title"] = "Serviceskjema";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/ServiceSkjema.css">

    <title>Serviceskjema</title>
</head>
<body>
<div class="container">
    <h1>Serviceskjema</h1>
        
<form asp-controller="ServiceSkjema" asp-action="Upsert" method="post">
    @Html.AntiForgeryToken() <!-- This line to includes the anti-forgery token -->
    
    <input type="hidden" asp-for="@Model.Id" class="col-4" />
    <input type="hidden" asp-for="@Model.OrdreId" class="col-4" />
            
    <div class="container-fluid">
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="@Model.AvtaltKunde">Avtalt med kunden</label>
                    <input asp-for="@Model.AvtaltKunde" class="form-control" />
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="@Model.DelerBrukt">Deler Brukt</label>
                    <input asp-for="@Model.DelerBrukt" class="form-control" />
                </div>
            </div>
        </div>
                
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="@Model.DelerSkiftet">Deler Skiftet</label>
                    <input asp-for="@Model.DelerSkiftet" class="form-control" />
                </div>
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="@Model.RepBeskrivelse">Rep Beskrivelse</label>
                    <input asp-for="@Model.RepBeskrivelse" class="form-control" />
                </div>
            </div>
        </div>
                
        <div class="row">
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="@Model.ArbeidsTimer">Arbeidstimer</label>
                    <input asp-for="@Model.ArbeidsTimer" class="form-control" />
                </div>
            </div>
            <div class="col-4">
                <div class="form-group mb-3">
                    <label asp-for="@Model.UtførtAv">Service utført av</label>
                    <input asp-for="@Model.UtførtAv" class="form-control" />
                </div>
            </div>
        </div>
    </div>
    
    <button class="btn btn-warning" type="submit">Lagre</button>
            <a href="@Url.Action("Index", "Ordre")" class="btn btn-secondary">Tilbake</a>
            
        </form>
    </div>
</body>
</html>
