@model nosted_dotnet.MVC.Models.CheckList.CheckListViewModel
@{
    ViewData["Title"] = "Sjekkliste";
}

<!DOCTYPE html>
<html lang="nb-NO">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <title>Sjekkliste</title>
</head>

<form class="form-container" asp-action="Index" asp-controller="CheckList" method="post">
    @Html.AntiForgeryToken()
    <h1>Saksnummer @Model.CheckListId</h1>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6 mb-4">
                @for (var i = 0; i < Model.CategoryGroups.Count; i++)
                {
                    <div class="card">
                        <div class="card-body text-left">
                            <h3>@Model.CategoryGroups[i].Name</h3>
                            <table class="table">
                                <tbody>
                                @foreach (var group in Model.CategoryGroups[i].Jobs)
                                {
                                    <tr>
                                        <td class="align-middle fixed-width-label">@group</td>
                                        <td class="align-middle">
                                            <div class="btn-group btn-label" data-toggle="buttons">
                                                <label class="btn btn-default">
                                                    <input type="radio" name="@group" value="ok"> OK
                                                </label>
                                                <label class="btn btn-default">
                                                    <input type="radio" name="@group" value="bs"> Burde Skiftes
                                                </label>
                                                <label class="btn btn-default">
                                                    <input type="radio" name="@group" value="def"> Defekt
                                                </label>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-4 mt-4">
                    <h3><label for="TestSettings">TrykkSetting og Funksjons Test</label></h3>
                    <div class="form-group">
                        <label for="trykksetting">Trykksetting Bar</label>
                        @Html.TextBoxFor(m => m.TrykkSetting, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="Trekkkraft">Trekkkraft (KN)</label>
                        @Html.TextBoxFor(m => m.TrekKraft, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="BremseKraft">BremseKraft (KN)</label>
                        @Html.TextBoxFor(m => m.BremseKraft, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="Resulatat">Resultat For Test</label>
                        @Html.TextAreaFor(m => m.FunksjonsTestKommentar, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label for="ConsumedHours">Antall Timer</label>
                        @Html.TextBoxFor(m => m.ConsumedHours, new { @class = "form-control" })
                    </div>
                </div>

    <div class="col-md-12 mt-4">
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Fullf√∏r Sjekkliste</button>
        </div>
    </div>
    
</form>
