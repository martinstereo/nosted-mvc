@model nosted_dotnet.MVC.Models.Ordre.OrdreSkjema

@{
    ViewData["Title"] = "Ordreskjema";
 }
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/OrdreSkjema.css">

    <title>Ny ordre</title>
 
</head>
<body>
 
    <div class="container">
    <h1>Ny ordre</h1>
        <p>Fyll ut kundeinformasjon</p>
        <form asp-controller="Ordre" asp-action="Index" method="post">
            @Html.AntiForgeryToken() <!-- This line to includes the anti-forgery token -->
            <div class="column">
                <div class="label"><label for="Fornavn">Fornavn:</label></div>
                <!-- Razor will automatically HTML-encode alfakrollModel.Fornavn osv -->
                <input class="input" type="text" id="Fornavn" name="Fornavn" value="@Model.Fornavn" />
            </div>
        
        <div class="column">
            <div class="label"><label for="Etternavn">Etternavn:</label></div>
            <!-- Razor will automatically HTML-encode alfakrollModel.Etternavn osv -->
            <input class="input" type="text" id="Etternavn" name="Etternavn" value="@Model.Etternavn" />
        </div>
            <div class="column">
                <div class="label"><label for="MottattDato">Mottatt dato:</label></div>
                <input class="input" type="datetime-local" id="MottattDato" name="MottattDato" value="@Model.MottattDato.ToString("2023-01-01T00:00:00")" />
            </div>
            <div class="clear"></div>

            <div class="column">
                <div class="label"><label for="Email">E-mail:</label></div>
                <input class="input" type="text" id="Email" name="Email" value="@Model.Email" />
            </div>
            <div class="column">
                <div class="label"><label for="Adresse">Adresse:</label></div>
                <input class="input" type="text" id="Adresse" name="Adresse" value="@Model.Adresse" />
            </div>
            <div class="clear"></div>

            <div class="column">
                <div class="label"><label for="TelefonNr">Telefonnummer:</label></div>
                <input class="input" type="tel" id="TelefonNr" name="TelefonNr" value="@Model.TelefonNr" />
            </div>
            <div class="column">
                <div class="label"><label for="Serienummer">Serienummer:</label></div>
                <input class="input" type="text" id="Serienummer" name="Serienummer" value="@Model.Serienummer" />
            </div>
            <div class="clear"></div>

            <div class="column">
                <div class="label"><label for="Produkttype">Produkttype:</label></div>
                <input class="input" type="text" id="Produkttype" name="Produkttype" value="@Model.Produkttype" />
            </div>
            <div class="column">
                <div class="label"><label for="Årsmodell">Årsmodell:</label></div>
                <input class="input" type="text" id="Årsmodell" name="Årsmodell" value="@Model.Årsmodell" />
            </div>
            <div class="clear"></div>

            <div class="column">
                <div class="label"><label for="ServiceRep">Service / rep garanti:</label></div>
                <input class="input" type="text" id="ServiceRep" name="ServiceRep" value="@Model.ServiceRep" />
            </div>
            <div class="column">
                <div class="label"><label for="OrdreNummer">Ordrenummer:</label></div>
                <input class="input" type="text" id="OrdreNummer" name="OrdreNummer" value="@Model.OrdreNummer" />
            </div>
            <div class="clear"></div>
            <div>
                <button class="button" type="submit">Opprett ny ordre</button>
            </div>
    </form>
    </div>
</body>
</html>

