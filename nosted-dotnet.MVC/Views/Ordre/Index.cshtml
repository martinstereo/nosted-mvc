@model nosted_dotnet.MVC.Models.Ordre.OrdreViewModel

@{
    ViewData["Title"] = "OrdreLinje";
}

<h1>Ordre</h1>
    
<form asp-controller="Ordre" asp-action="Index" method="post">

    <button type="submit" form="Ordre" value="Submit">Lag ny ordre</button>


</form>

<table id="ordre">
    <tr>
        <th>Ordrenummer:</th>
        <th>Dato motatt:</th>
        <th>Produkttype:</th>
        <th>Serviceskjema:</th>
        <th>Sjekkliste:</th>
        <th>Må fullføres innen:</th>
        <th>Er case ferdig?</th>
    </tr>
    
        <tr>
            <td>@Model.OrdreNummer</td>
            <td>@Model.DatoMotatt</td>
            <td>@Model.ProduktType</td>
            <!-- Serviceskjema knapp -->
            <td>
                <a href="@Url.Action("Index", "ServiceSkjema")" target="_blank" class="btn btn-primary">Lag Serviceskjema</a>
            </td>
            <!-- Sjekkliste knapp -->
            <td>
            <a href="@Url.Action("Index", "Checklist")" target="_blank" class="btn btn-primary">Lag Sjekkliste</a>
            </td>

            <td>@Model.InnenDato</td>
            <td>@Model.ErFerdig</td>
        </tr>
</table> 

