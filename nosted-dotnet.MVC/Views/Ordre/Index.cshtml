@model nosted_dotnet.MVC.Models.Ordre.FullOrdreViewModel

@{
    ViewData["Title"] = "Ordre";
}
<!DOCTYPE html>
<html>
<head>
    <script src="~/js/site.js"></script>
</head>

<body>

    <h1>Ordre</h1>

    <!-- Knapp som åpner skjema for ny ordre (ordre) -->
    <button style="margin-top: 10px; margin-bottom: 40px;"><a class="nav-link text-dark" asp-area="" asp-controller="Ordre" asp-action="Ordreskjema">Ny Ordre</a></button>

    

    <!--Tabellvisning for ordre-->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Ordrenummer:</th>
                <th>Dato motatt:</th>
                <th>Produkt:</th>
                <th>Kundenavn:</th>
                <th>Kommentar:</th>
                <th>Serviceskjema:</th>
                <th>Sjekkliste:</th>
                <th>Fremgang:</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (var ordre in Model.OrdreList)
            {
            <tr>
                <td>@ordre.Id</td>
                <td>@ordre.MottattDato</td>
                <td>@ordre.Produkt.Type @ordre.Produkt.AarsModell</td>
                <td>@ordre.Kunde.Navn</td>
                <td>@ordre.Kommentar</td>
                <td>@ordre.ServiceSkjema.ServiceSkjemaID</td>
                <td>@ordre.Sjekkliste.CheckListId</td>
                <td>
                    @if (ordre.ErFerdig == true)
                        {
                            <p>Fullført</p>
                        } else
                        {
                            <p>I prosess</p>
                        }
                </td>
            </tr>
            }
            
        <tbody>
    </table> 
</body>
</html>