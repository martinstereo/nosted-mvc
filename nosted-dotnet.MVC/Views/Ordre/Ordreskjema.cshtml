@model nosted_dotnet.MVC.Models.Ordre.OrdreViewModel

@{
    ViewData["Title"] = "Ordreskjema";
 }
 
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/OrdreSkjema.css">

    <title>Ny ordre</title>
 
</head>
 

<div class="container">
    <h1>Ny ordre</h1>
    <p>Fyll ut kundeinformasjon</p>
        
    <form asp-controller="Ordre" asp-action="" method="post">
            @Html.AntiForgeryToken() <!-- This line to includes the anti-forgery token -->


            <!-- -------------------KUNDE INFORMASJON ----------------- -->
            <div class="column">
                <div class="label"><label for="Fornavn">Navn:</label></div>
                <input class="input" type="text" id="Navn" name="Navn" value="@Model.Kunde.Navn" />
            </div>
        
            <div class="column">
                <div class="label"><label for="Email">E-mail:</label></div>
                <input class="input" type="text" id="Email" name="Email" value="@Model.Kunde.Email" />
            </div>
            
            <div class="clear"></div>

            <div class="column">
                <div class="label"><label for="Adresse">Adresse:</label></div>
                <input class="input" type="text" id="Adresse" name="Adresse" value="@Model.Kunde.Adresse" />
            </div>

            <div class="column">
                <div class="label"><label for="TelefonNr">Telefonnummer:</label></div>
                <input class="input" type="tel" id="TelefonNr" name="TelefonNr" value="@Model.Kunde.TelefonNr" />
            </div>
            
            <!-- ------------------------------ KOMMENTAR FRA KUNDEN -------------------------- ->

            <div class="clear"></div>

            <div class="column">
                <div class="label"><label for="Kommentar">Kommentar fra kunden:</label></div>
                <input class="input" type="text" id="Kommentar" name="Kommentar" value="@Model.Kommentar" />
            </div>

            <!-- -------------------PRODUKTINFORMASJON  -------------------------------- -->

        <div class="clear"></div>

            <p>Fyll ut produktinformasjon</p>

            <div class="column">
                <div class="label"><label for="Serienummer">Serienummer:</label></div>
                <input class="input" type="text" id="Serienummer" name="Serienummer" value="@Model.Produkt.Serienummer" />
            </div>

            <div class="column">
                <div class="label"><label for="Produkttype">Produkttype:</label></div>
                <input class="input" type="text" id="Produkttype" name="Produkttype" value="@Model.Produkt.Type" />
            </div>

            <div class="clear"></div>

            <div class="column">
                <div class="label"><label for="Årsmodell">Årsmodell:</label></div>
                <input class="input" type="text" id="Årsmodell" name="Årsmodell" value="@Model.Produkt.AarsModell" />
            </div>

            <!-- ------------ GARANTI ------------------- -->
            <div class="column">
                <div class="label"><label for="ServiceRep">Service / rep garanti:</label></div>
                <input class="input" type="text" id="ServiceRep" name="ServiceRep" value="@Model.ServiceRep" />
            </div>

            <div class="clear"></div>

            <!-- ------------KNAPP ----------------------- -->
            <div>
                <button class="button" type="submit">Opprett ny ordre</button>
            </div>
    </form>
</div>


