@model nosted_dotnet.MVC.Entities.Ordre

<h1>Delete Ordre</h1>

@using (Html.BeginForm("DeleteConfirmed", "Ordre", new { id = Model.Id }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <p>Are you sure you want to delete this ordre?</p>
    <input type="submit" value="Delete" class="btn btn-danger" />
    <button type="button" class="btn btn-primary" onclick="cancelAction()">Cancel</button>
}

<script>
    function cancelAction() {
        window.location.href = '@Url.Action("Index", "Ordre")';
    }
</script>