<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <RootNamespace>nosted_dotnet.MVC.Tests</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
